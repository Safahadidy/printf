#include "main.h"
/**
 * is_switch - imp
 * @s: the char to be checked as a specefier.
 * @ptr: the argument to match the speci
 * Return: the wanted result as printf would print
 */
int is_switch(va_arg ptr, char s)
{
switch (s)
{
case 's':
	format++;
	_string_format_handler_(ptr);
        break;
case 'c':
	print_char(va_arg(ptr, int));
	i++;
	break;
case '%':
	print_per();
	i++;
	break;
case 'd':
	format++;
	print_int(ptr);
	break;
case 'i':
	format++;
	print_int(ptr);
	break;
case 'd':
	format++;
	print_int(ptr);
	break;
default :
	print_unformatted(format[i]);
}
return (0);
}
